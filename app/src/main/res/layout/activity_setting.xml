<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity">
    <TextView
        android:id="@+id/settingtitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="学长快跑点餐系统员工临时版本"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.05"/>
    <TextView
        android:id="@+id/v1"
        android:text="设置接单人员姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        app:layout_constraintTop_toBottomOf="@+id/v1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ed_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="输入姓名"
        android:maxLength="4"
        app:layout_constraintLeft_toRightOf="@id/v2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1"
        app:layout_constraintBaseline_toBaselineOf="@id/v2"/>

    <TextView
        android:id="@+id/v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号码："
        android:maxLength="4"
        app:layout_constraintLeft_toLeftOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="输入手机号码"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxLength="11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginLeft="100dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBaseline_toBaselineOf="@id/v3"/>



    <EditText
        android:id="@+id/ed_miyao"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:hint="输入秘钥"
        app:layout_constraintTop_toBottomOf="@id/v3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/biankuang"
        />

    <Button
        android:id="@+id/bt_save"
        android:text="保存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ed_miyao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>